<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beisi.shiro.dao.UserDao">

	<select id="getUserByName"
		resultType="com.beisi.shiro.model.User">
		select * from t_user as u where u.username = #{username}
	</select>

	<select id="selectRelevanceUser" resultMap="UserRoleMap">
		SELECT
		u.id,u.username,u.`password`,u.email,u.phone,u.`enable`
		FROM
		t_user AS u
	</select>

	<select id="getRoleByUid"
		resultType="com.beisi.shiro.model.Role">
		SELECT
		r.id,r.`name`,r.code
		FROM
		t_role AS r,
		t_user_role AS ur
		WHERE
		ur.rid = r.id
		AND ur.uid=#{id}
	</select>

	<resultMap type="com.beisi.shiro.model.User"
		id="UserRoleMap">
		<id column="id" property="id" />
		<result column="username" property="username" />
		<result column="email" property="email" />
		<result column="phone" property="phone" />
		<result column="enable" property="enable" />
		<collection property="roles"
			select="com.beisi.shiro.dao.UserDao.getRoleByUid" column="id">
		</collection>
	</resultMap>

	<!-- <select id="selectRelevanceUser" resultMap="UserRoleMap"> SELECT u.id,u.username,u.`password`,u.email,u.phone,u.`enable`, 
		r.id as rid,r.`name` as rname FROM t_user AS u, t_role AS r, t_user_role 
		AS ur WHERE ur.uid = u.id AND ur.rid = r.id </select> <resultMap type="com.beisi.shiro.model.User" 
		id="UserRoleMap"> <id column="id" property="id" /> <result column="username" 
		property="username"/> <result column="email" property="email"/> <result column="phone" 
		property="phone"/> <result column="enable" property="enable"/> <collection 
		property="roles" ofType="com.beisi.shiro.model.Role"> <id column="rid" property="id"/> 
		<result column="rname" property="name"/> </collection> </resultMap> 这样写，会导致分页插件查询出现问题 -->

	<select id="getUserByUid" resultMap="UserRoleMap">
		SELECT
		u.id,u.username,u.`password`,u.email,u.phone,u.`enable`
		FROM
		t_user AS u
		WHERE
		u.id = #{uid}
	</select>

	<select id="selectUsersBySearchPage" resultMap="UserRoleMap">
		SELECT
		u.id,u.username,u.`password`,u.email,u.phone,u.`enable`
		FROM
		t_user AS u
		WHERE
		u.username LIKE #{userInfo}
		OR u.phone LIKE #{userInfo}
	</select>

	<select id="selectUserByUserInfo"
		resultMap="UserRelRoleRelResMap">
		SELECT u.id,u.username,u.password,u.email,u.phone,u.enable,
		r.id rid,r.name,r.code,
		res.id resid,res.path
		FROM
		t_user AS u,t_role AS r,t_resource AS res,t_user_role AS ur,t_role_resource AS rr
		WHERE
		u.id=ur.uid AND ur.rid=r.id AND r.id=rr.rid AND rr.resid=res.id
		AND
		(u.username=#{userInfo} OR u.phone=#{userInfo} OR u.email=#{userInfo})
	</select>

	<resultMap type="com.beisi.shiro.model.User"
		id="UserRelRoleRelResMap">
		<id column="id" property="id" />
		<result column="username" property="username" />
		<result column="password" property="password" />
		<result column="email" property="email" />
		<result column="phone" property="phone" />
		<result column="enable" property="enable" />
		<collection property="roles" ofType="com.beisi.shiro.model.Role">
			<id column="rid" property="id" />
			<result column="name" property="name" />
			<result column="code" property="code" />
			<collection property="resources" ofType="com.beisi.shiro.model.Resource">
				<id column="resid" property="id" />
				<result column="path" property="path" />
			</collection>
		</collection>
	</resultMap>

</mapper>