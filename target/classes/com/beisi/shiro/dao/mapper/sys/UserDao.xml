<mapper namespace="com.beisi.shiro.dao.sys.UserDao">

	<select id="getUserByName"
		resultType="com.beisi.shiro.model.sys.User">
		select * from t_user as u where u.username = #{username}
	</select>

	<select id="selectRelevanceUser" resultMap="UserRoleMap">
		SELECT
		u.id,u.username,u.`password`,u.email,u.phone,u.`enable`
		FROM
		t_user AS u
	</select>

	<resultMap type="com.beisi.shiro.model.sys.User"
		id="UserRoleMap">
		<id column="id" property="id" />
		<result column="username" property="username" />
		<result column="email" property="email" />
		<result column="phone" property="phone" />
		<result column="enable" property="enable" />
		<collection property="roles"
			select="com.beisi.shiro.dao.sys.RoleDao.getRoleByUid" column="id">
		</collection>
	</resultMap>

